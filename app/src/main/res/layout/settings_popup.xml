<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/md_blue_100"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Welcome to Moments!"
        android:textColor="@color/md_blue_800"
        android:textSize="18sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_add_box_white_24dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_add_box_white_24dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Adding entries:"
        android:textColor="@color/md_blue_800"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="-> Add photo and title\n-> Edit/choose date" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_search_white_24dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_search_white_24dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Entry filtering:"
        android:textColor="@color/md_blue_800"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="-> Filter by date/year\n-> Different sort options" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_info_outline_white_24dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_info_outline_white_24dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="View this popup: "
        android:textColor="@color/md_blue_800"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Deleting/updating an entry:"
        android:textColor="@color/md_blue_800"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press/hold finger on an entry" />

    <CheckBox
        android:id="@+id/default_display_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="-7dp"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="15dp"
        android:checked="true"
        android:text="Default item display" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Delete all entries (Cannot restore)"
        android:textColor="@color/md_red_900"
        android:textSize="12sp" />

    <CheckBox
        android:layout_marginLeft="-7dp"
        android:layout_marginStart="-7dp"
        android:id="@+id/delete_all_entry_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:drawableLeft="@drawable/ic_delete_sweep_white_24dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_delete_sweep_white_24dp" />


</LinearLayout>