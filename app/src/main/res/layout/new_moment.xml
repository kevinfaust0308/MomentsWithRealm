<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="?colorPrimary"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="15dp"
              android:paddingTop="15dp">


    <ViewSwitcher
        android:id="@+id/image_view_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:measureAllChildren="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/md_white_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose image"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:tint="@color/md_white_1000"
                    android:id="@+id/camera_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_photo_camera_black_48dp"/>

                <ImageButton
                    android:tint="@color/md_white_1000"
                    android:id="@+id/gallery_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@drawable/ic_photo_black_48dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image preview"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_chosen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

                <ImageButton
                    android:id="@+id/remove_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="#00000000"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_remove_circle_black_18dp"
                    android:tint="@color/md_red_500"/>
            </FrameLayout>

        </LinearLayout>


    </ViewSwitcher>


    <TextView
        android:textColor="@color/md_white_1000"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textSize="16sp"/>

    <EditText
        android:textColor="@color/md_white_1000"
        android:id="@+id/title_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:maxLength="75"/>

    <TextView
        android:textColor="@color/md_white_1000"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/choose_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">


        <ImageButton
            android:tint="@color/md_white_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/ic_date_range_black_18dp"/>

        <TextView
            android:textColor="@color/md_white_1000"
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 15, 2016"/>

    </LinearLayout>


    <ImageButton
        android:tint="@color/md_white_1000"
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:padding="10dp"
        android:src="@drawable/ic_check_black_24dp"/>

</LinearLayout>